<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!--Text-->

    <style name="AlertDialogStyle" parent="Base.Theme.MaterialComponents.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/textColor</item>
        <item name="android:windowTitleStyle">@style/TextTitleStyle</item>
    </style>

    <style name="TextTitleStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="AppTheme.Text.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/exosoftsemibold</item>
    </style>

    <style name="AppTheme.Text.Small.Bold" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/exosoftsemibold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/exosoftsemibold</item>
    </style>

    <style name="AppTheme.Text.Medium.Bold" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/exosoftsemibold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Heading" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/exosoftsemibold</item>
    </style>



    <style name="Normal_Margin_Style" parent="AppTheme">
        <item name="android:layout_marginRight">@dimen/margin_right_16</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_16</item>
        <item name="android:layout_marginTop">@dimen/margin_top_8</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_8</item>
    </style>

    <style name="Font_family_light" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Font_family_regular" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>


</resources>